{
  "name": "vue-plugin-boilerplate",
  "description": "Boilerplate for Vue.js plugin",
  "version": "1.0.0",
  "author": "kazuya kawaguchi",
  "bugs": {
    "url": "https://github.com/kazupon/vue-plugin-boilerplate/issues"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-loader": "^5.3.2",
    "babel-plugin-espower": "^1.0.0",
    "eslint": "^1.3.1",
    "istanbul-instrumenter-loader": "^0.1.3",
    "json-loader": "^0.5.2",
    "karma": "^0.13.9",
    "karma-coverage": "^0.5.2",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.1",
    "phantomjs": "^1.9.18",
    "power-assert": "^1.0.0",
    "vue": "^0.12.13",
    "webpack": "^1.12.1"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/kazupon/vue-plugin-boilerplate#readme",
  "keywords": [
    "boilerplate",
    "plugin",
    "vue",
    "vuejs"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/vue-plugin-boilerplate.git"
  },
  "scripts": {
    "lint": "eslint src test config",
    "build": "babel src --out-dir lib --source-maps-inline",
    "bundle": "webpack --config config/webpack.conf.js && webpack --config config/webpack.min.conf.js",
    "test": "karma start config/karma.conf.js",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "clean": "rm -rf lib && rm -rf coverage && rm -rf dist"
  }
}
